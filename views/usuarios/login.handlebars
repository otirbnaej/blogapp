{{#if erros}}
<div class="alert alert-danger">{{erros}}</div>
{{/if}}

<h1 align="center">Login</h1>

<div class="card mt-4">
    <div class="card-body">
        <form action="" method="POST">
            <label for="email">Email: </label>
            <input type="email" class="form-control mt-2" name="email" required>
            <label for="senha">Senha: </label>
            <input type="password" class="form-control mt-2" name="senha" required>
            <button type="submit" class="btn btn-primary mt-4">Entrar</button>
        </form>
    </div>
</div>