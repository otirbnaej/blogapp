<div class="card">

    <div class="card-body">
        {{#if postagem}}
        <h3>Editar postagem</h3>
        {{else}}
        <h3>Nova postagem</h3>
        {{/if}}
        <form action="/admin/postagens/nova" method="POST">
            <input type="hidden" name="id" value="{{postagem._id}}">

            <label for="titulo">Título: </label>
            <input type="text" id="titulo" name="titulo" placeholder="Título" class="form-control mt-2" {{#if
                postagem.titulo}} value="{{postagem.titulo}}" {{/if}}>

            <label class="mt-4" for="slug">Slug: </label>
            <input type="text" id="slug" name="slug" placeholder="Slug" class="form-control mt-2" {{#if postagem.slug}}
                value="{{postagem.slug}}" {{/if}}>

            <label class="mt-4" for="descricao">Descrição: </label>
            <input type="text" id="descricao" name="descricao" placeholder="Descrição" class="form-control mt-2" {{#if
                postagem.descricao}} value="{{postagem.descricao}}" {{/if}}>

            {{!-- Conteúdo da publicação --}}
            <label class="mt-4" for="conteudo">Postagem: </label>
            {{#if postagem.conteudo}}
            <textarea type="text" id="conteudo" name="conteudo" placeholder="Adicione sua publicação aqui..."
                class="form-control mt-2">{{postagem.conteudo}}</textarea>
            {{else}}
            <textarea type="text" id="conteudo" name="conteudo" placeholder="Adicione sua publicação aqui..."
                class="form-control mt-2"></textarea>
            {{/if}}

            <label class="mt-4" for="categoria">Categoria:</label>
            <select name="categoria" class="form-select mt-2">
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma categoria registrada.</option>
                {{/each}}
            </select>

            {{#each erros}}
            <div class="alert alert-danger mt-4">{{texto}}</div>

            {{/each}}

            <div>
                <button type="submit" class="btn btn-outline-success mt-4">Criar postagem</button>
            </div>
        </form>
    </div>
</div>