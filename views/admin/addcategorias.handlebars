<div class="card">
    <div class="card-body">

        {{#if categoria}}
        <h3>Editar Categoria</h3>
        {{else}}
        <h3>Nova Categoria</h3>
        {{/if}}
        <form action="/admin/categorias/nova" method="POST">
            <input type="hidden" name="id" value="{{categoria._id}}">
            <label for="nome">Nome: </label>
            <input type="text" id="nome" name="nome" placeholder="Nome" class="form-control mt-2" {{#if categoria.nome}}
                value="{{categoria.nome}}" {{/if}}>
            <label class="mt-4" for="slug">Slug: </label>
            <input type="text" id="slug" name="slug" placeholder="Slug" class="form-control mt-2" {{#if categoria.slug}}
                value="{{categoria.slug}}" {{/if}}>

            {{#each erros}}
            <div class="alert alert-danger mt-2">{{texto}}</div>

            {{/each}}


            <button type="submit" class="btn btn-outline-success mt-4">Criar categoria</button>
        </form>
    </div>
</div>